{
    "compilerOptions": {
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "checkJs": true,
        "lib": ["deno.window", "dom"]
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 100,
        "semiColons": true,
        "singleQuote": false,
        "useTabs": false
    },
    "imports": {
        "client/": "./src/client/",
        "server/": "./src/server/"
    },
    "tasks": {
        "dev": "deno run --allow-net --allow-read --allow-write --watch ./src/server/main.ts"
    }
}
